<li class="splide__slide card" data-combatant-id="{{combatant.id}}">
    <div class="name">
        {{#if combatant.carousel.isGM}}
        <div class="button-tray flexrow">
            <a class="combatant-control" data-control="toggleHidden" title="{{localize "COMBAT_CAROUSEL.COMBATANT_CARD.Controls.Hide"}}"><i class="fas fa-eye-slash"></i></a>
            <a class="combatant-control" data-control="toggleDefeated" title="{{localize "COMBAT_CAROUSEL.COMBATANT_CARD.Controls.Defeated"}}"><i class="fas fa-skull"></i></a>
            <a class="combatant-control" data-control="remove" title="{{localize "COMBAT_CAROUSEL.COMBATANT_CARD.Controls.Remove"}}"><i class="fas fa-trash"></i></a>
        </div>
        {{/if}}
        <h3 title="{{combatant.name}}">{{combatant.name}}</h3>
    </div>
    <div class="container">
        <div class="overlay-hud">
            <span class="tracker-indicators">
                {{#if combatant.defeated}}
                <i class="fas fa-skull" title="{{localize "COMBAT_CAROUSEL.WORDS.Defeated"}}"></i>
                {{/if}}
                {{#if combatant.carousel.owner}}
                {{#if combatant.hidden}}
                <i class="fas fa-eye-slash" title="{{localize "COMBAT_CAROUSEL.WORDS.Hidden"}}"></i>
                {{/if}}
                {{/if}}
            </span>
            
            <div class="overlay-properties {{#unless combatant.carousel.showOverlay}}hidden{{/unless}}">
                {{#each combatant.carousel.overlayProperties}}
                <div class="property" title="{{this.name}}: {{this.value}}">
                    <img class="icon" src="{{this.img}}"/>
                    <span class="value">{{this.value}}</span>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="initiative">
            {{#if combatant.carousel.showInitiativeIcon}}
            <a class="roll-init">
            {{/if}}
            {{#if combatant.carousel.showInitiativeBackground}}
            <span class="fa-stack fa-2x">
            {{/if}}
                <i class="fas fa-dice-d20 fa-stack-2x {{#unless combatant.carousel.showInitiativeIcon}}hidden{{/unless}}" title="{{localize "COMBAT_CAROUSEL.COMBATANT_CARD.RollInitiative"}}"></i>
                <input type="text" class="fa-stack-1x fa-inverse {{#unless combatant.carousel.showInitiative}}hidden{{/unless}}" title="{{#if combatant.initiative}}{{combatant.initiative}} - {{/if}}{{localize "COMBAT_CAROUSEL.COMBATANT_CARD.RollInitiative"}}" value="{{combatant.initiative}}" disabled/>
            {{#if combatant.carousel.showInitiativeBackground}}
            </span>
            {{/if}}
            {{#if combatant.carousel.showInitiativeIcon}}
            </a>
            {{/if}}
        </div>
        <div class="avatar splide__slide__container">
            {{#if combatant.carousel.overlayEffect}}
            <img class="overlay-effect" src="{{combatant.carousel.overlayEffect}}"/>
            {{/if}}
            <img src="{{combatant.img}}" title="{{combatant.name}}"/>
        </div>
        <div class="effects">
            {{#each combatant.carousel.effects}}
            <div class="effect">
                <img src="{{this}}"/>
            </div>
            {{/each}}
        </div>
    </div>
    {{#if combatant.carousel.showBar1}}
    <div class="bar1" width="100%">
        <meter 
            value="{{combatant.carousel.bar1.value}}" 
            min="0" 
            max="{{combatant.carousel.bar1.max}}" 
            title="{{combatant.carousel.bar1.title}}: {{combatant.carousel.bar1.value}}{{#if combatant.carousel.bar1.max}}/{{combatant.carousel.bar1.max}}{{/if}}" 
            optimum="{{combatant.carousel.bar1.optimum}}" low="{{combatant.carousel.bar1.low}}" 
            high="{{combatant.carousel.bar1.high}}"
        />
    </div>
    {{/if}}
    <div class="active-combatant-wrapper">
        <div class="active-combatant"></div>
    </div>
